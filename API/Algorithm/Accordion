local version = "1.03"

function getRoute(w, d, min, max, isGoal)
  local route = {}
  local f
  if (w % 2 == 0) then
  -- even width
    if (d < max.D) then
      f = facing.NORTH
    elseif (w < max.W) then
      f = facing.EAST
    end 
  else
  -- odd width
    if (d > min.D) then
      f = facing.SOUTH
    elseif (w < max.W) then
      f = facing.EAST
    end
  end
  if (f ~= nil and isGoal(Alabaster.getNextFromPos(f, direction.FORWARD, w, d, nil))) then
    table.insert(route, {face = f, dir = direction.FORWARD})
  end
  return route
end